            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title"><strong>Registrate en ZiPago</strong></div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>Nombres:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="txtNombres" id="txtNombres" class="form-control" placeholder="Nombres del Usuario" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Apellidos:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="txtApellidos" id="txtApellidos" class="form-control" placeholder="Apellidos del Usuario" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Id ZiPago:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" name="txtCorreo" id="txtCorreo" class="form-control" placeholder="Correo electr&oacute;nico" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Clave:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </div>
                            <input type="password" name="txtClave" id="txtClave" class="form-control" placeholder="Contrase&ntilde;a" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Confirme Clave:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </div>
                            <input type="password" name="txtConfirmeClave" id="txtConfirmeClave" class="form-control" placeholder="Vuelva a ingresar la Contrase&ntilde;a" required>
                        </div>
                    </div>

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="chkAcepto" id="chkAcepto" required>
                        <label class="form-check-label" for="chkAcepto"><a href="#" data-toggle="modal" data-target="#scrollmodal">Acepto los terminos y condiciones.</a></label>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8 control">
                        </div>
                        <div class="col-sm-4 control">
                            <a id="btnRegistrar" href="#" class="btn btn-success">Registrar</a>
                        </div>
                    </div>
                    <div class="form-group control">
                        <br />
                        <br />
                    </div>
                    <div class="form-group">
                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                            <div class="col-sm-6">
                            </div>
                            <div class="col-sm-6 control" style="text-align:right; padding-right:0;">
                                <a asp-controller="Home" asp-action="Index">Ingrese a ZiPago</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
