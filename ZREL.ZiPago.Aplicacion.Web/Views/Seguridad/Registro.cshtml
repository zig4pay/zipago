                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="apellidosusuario" id="apellidosusuario" class="form-control" placeholder="Apellidos del Usuario" asp-for="ApellidosUsuario">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="clave1">@Html.DisplayNameFor(m => m.Clave1):</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" name="clave1" id="clave1" class="form-control" placeholder="Correo electr&oacute;nico" asp-for="Clave1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="clave2">@Html.DisplayNameFor(m => m.Clave2):</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </div>
                            <input type="password" name="clave2" id="clave2" class="form-control" placeholder="Contrase&ntilde;a" asp-for="Clave2">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmeclave">Confirme Clave:</label>
