                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="nombresusuario" id="nombresusuario" class="form-control" placeholder="Nombres del Usuario" asp-for="NombresUsuario">
                        </div>
                    </div>
                    <div class="form-group">
