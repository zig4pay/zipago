@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.RegistroViewModel

@{
    ViewData["Title"] = "ZiPago | Afiliacion";
    ViewData["TitleNav"] = "Afiliacion";
    Layout = "_LayoutApp";
}

<div class="image-container set-full-height">

    <!--   Big container   -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">

                <!--      Wizard container        -->
                <div class="wizard-container">
                    <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
                    <div class="card wizard-card" data-color="orange" id="wizardProfile">
                        <form id="frmAfiliacion" asp-controller="" asp-action="" method="post">

                            <div class="wizard-header text-center">
                                <h4>
                                    <b>Afiliate a ZiPago</b><br>
                                    <small>Sigue estos pasos ingresando la siguiente informacion:</small>
                                </h4>
                            </div>

                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#about" data-toggle="tab">Paso 1</a></li>
                                    <li><a href="#account" data-toggle="tab">Paso 2</a></li>
                                    <li><a href="#address" data-toggle="tab">Paso 3</a></li>
                                </ul>
                            </div>

                            <div class="tab-content">
                                <div class="tab-pane" id="about">
                                    <div class="row">
                                        <h4 class="info-text"> Registro de Usuario ZiPago </h4>
                                        <div class="col-sm-10 col-sm-offset-1">

                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="clave1">@Html.DisplayNameFor(m => m.Clave1):</label>
                                                </div>
                                                <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />
                                                <div class="col-sm-10">
                                                    <input id="clave1" name="clave1" type="text" class="form-control" asp-for="Clave1" disabled>
                                                </div>
                                            </div>
                                            <hr />

                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label>Tipo de Persona</label>
                                                </div>
                                                @foreach (var item in Model.TipoPersona)
                                                {
                                                    <div class="col-sm-2 form-check form-check-inline">
                                                        <input asp-for="CodigoTipoPersona" class="form-check-input" type="radio" id="optPersona@(item.Descr_Valor)" value="@item.Valor" />
                                                        <label class="label-radio" for="optPersona@(item.Descr_Valor)">@item.Descr_Valor</label>
                                                    </div>
                                                }
                                                <div class="col-sm-6"></div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="codigorubronegocio">Rubro de Negocio:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <select id="codigorubronegocio" name="codigorubronegocio" asp-for="CodigoRubroNegocio" asp-items="@(new SelectList(Model.RubroNegocio,"Valor", "Descr_Valor"))" class="form-control"></select>
                                                </div>
                                                <div class="col-sm-1">
                                                    <label for="otrorubronegocio">Otro:</label>
                                                </div>
                                                <div class="col-sm-5">
                                                    <input id="otrorubronegocio" name="otrorubronegocio" type="text" class="form-control" placeholder="Rubro o Sector al cual pertenece el negocio" asp-for="OtroRubroNegocio">
                                                </div>
                                            </div>

                                            <div id="DivJuridica">
                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="numeroruc">RUC:</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="numeroruc" name="numeroruc" type="text" class="form-control" placeholder="Numero de Registro Unico de Contribuyente" asp-for="NumeroRUC" maxlength="11">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="txtRUC">Razon Social:</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="razonsocial" name="razonsocial" type="text" class="form-control" placeholder="Razon Social segun SUNAT" asp-for="RazonSocial">
                                                    </div>
                                                </div>
                                                <hr />
                                                <div class="form-group row">
                                                    <label><strong>Contacto: </strong></label>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="numerodni">DNI:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="numerodni" name="numerodni" type="text" class="form-control" placeholder="Numero de DNI" asp-for="NumeroDNI" maxlength="8">
                                                </div>
                                                <div class="col-sm-2">
                                                    <label for="nombres">Nombres:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="nombres" name="nombres" type="text" class="form-control" placeholder="Nombres" asp-for="Nombres">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="apellidopaterno">Apellido Paterno:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="apellidopaterno" name="apellidopaterno" type="text" class="form-control" placeholder="Apellido Paterno" asp-for="ApellidoPaterno">
                                                </div>
                                                <div class="col-sm-2">
                                                    <label for="apellidomaterno">Apellido Materno:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="apellidomaterno" name="apellidomaterno" type="text" class="form-control" placeholder="Apellido Materno" asp-for="ApellidoMaterno">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label>Sexo:</label>
                                                </div>
                                                <div class="col-sm-2 form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="optSexo" id="optMasculino" value="M">
                                                    <label class="label-radio" for="optMasculino">Masculino</label>
                                                </div>
                                                <div class="col-sm-2 form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="optSexo" id="optFemenino" value="F">
                                                    <label class="label-radio" for="optFemenino">Femenino</label>
                                                </div>
                                                <div class="col-sm-3">
                                                    <label for="fechanacimiento">Fecha de Nacimiento:</label>
                                                </div>
                                                <div class="col-sm-3">
                                                    <input id="fechanacimiento" name="fechanacimiento" type="date" class="form-control" placeholder="dd/mm/yyyy" asp-for="FechaNacimiento">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="telefonofijo">Telefono Fijo:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="telefonofijo" name="telefonofijo" type="text" class="form-control" placeholder="Numero de Telefono Fijo" asp-for="TelefonoFijo">
                                                </div>
                                                <div class="col-sm-2">
                                                    <label for="telefonomovil">Telefono Movil:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <input id="telefonomovil" name="telefonomovil" type="text" class="form-control" placeholder="Numero de Telefono Movil" asp-for="TelefonoMovil">
                                                </div>
                                            </div>


                                            <hr />
                                            <div class="form-group row">
                                                <label><strong>Domicilio: </strong></label>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="codigodepartamento">Departamento:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <select id="codigodepartamento" name="codigodepartamento" asp-for="CodigoDepartamento" asp-items="@(new SelectList(Model.Departamento,"CodigoUbigeo", "Nombre"))" class="form-control"></select>
                                                </div>
                                                <div class="col-sm-2">
                                                    <label for="codigoprovincia">Provincia:</label>
                                                </div>
                                                <div class="col-sm-4">
                                                    <select id="codigoprovincia" name="codigoprovincia" asp-for="CodigoProvincia" class="form-control"></select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="codigodistrito">Distrito:</label>
                                                </div>
                                                <div class="col-sm-10">
                                                    <select id="codigodistrito" name="codigodistrito" asp-for="CodigoDistrito" class="form-control"></select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="via">Direccion:</label>
                                                </div>
                                                <div class="col-sm-10">
                                                    <input id="via" name="via" type="text" class="form-control" placeholder="Calle, Jiron, Avenida, Pasaje, etc." asp-for="Via">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                </div>
                                                <div class="col-sm-10">
                                                    <input id="direccionfacturacion" name="direccionfacturacion" type="text" class="form-control" placeholder="Numero, Piso, Interior, Manzana, etc." asp-for="DireccionFacturacion">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <label for="referencia">Referencia:</label>
                                                </div>
                                                <div class="col-sm-10">
                                                    <input id="referencia" name="referencia" type="text" class="form-control" placeholder="Referencia para ubicar la direccion" asp-for="Referencia">
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="form-group form-check">
                                                <label class="form-check-label" for="chkAcepto"><a href="#">Ver los terminos y condiciones aceptados.</a></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="account">
                                    <div class="row">
                                        <h4 class="info-text"> Registre sus cuentas bancarias </h4>

                                        <div class="col-sm-10 col-sm-offset-1">

                                            <div class="col-sm-12">
                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="clave1">@Html.DisplayNameFor(m => m.Clave1):</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="clave1" name="clave1" type="text" class="form-control" asp-for="Clave1" disabled>
                                                    </div>
                                                </div>
                                                <hr />
                                            </div>

                                            <div class="col-sm-12">

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="cboBanco">Banco:</label>
                                                    </div>
                                                    <div class="col-sm-8">
                                                        <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Banco,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="codigotipocuenta">Tipo de Cuenta:</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select id="codigotipocuenta" name="codigotipocuenta" asp-items="@(new SelectList(Model.TipoCuenta,"Valor", "Descr_Valor"))" class="form-control"></select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label for="codigomoneda">Moneda:</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select id="codigomoneda" name="codigomoneda" asp-items="@(new SelectList(Model.Moneda,"Valor", "Descr_Valor"))" class="form-control"></select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="numerocuenta">Numero de Cuenta Bancaria:</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="numerocuenta" name="numerocuenta" type="text" class="form-control" placeholder="Nro. de Cta. Bancaria">
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label for="cci">Codigo de Cuenta Interbancario - CCI:</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="cci" name="cci" type="text" class="form-control" placeholder="Codigo CCI">
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <a id="btnAnadirCta" class="btn btn-success">
                                                            Añadir
                                                        </a>
                                                    </div>
                                                </div>

                                                <hr />
                                            </div>

                                            <div class="col-sm-12">
                                                <table id="tblCuentas" class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="display:none;">IdCuenta</th>
                                                            <th scope="col" style="display:none;">CodigoBanco</th>
                                                            <th scope="col">Banco</th>
                                                            <th scope="col" style="display:none;">CodigoTipoCuenta</th>
                                                            <th scope="col">Tipo de Cuenta</th>
                                                            <th scope="col" style="display:none;">CodigoMoneda</th>
                                                            <th scope="col">Moneda</th>
                                                            <th scope="col">Numero de Cuenta</th>
                                                            <th scope="col">Codigo Cta. Interbancario - CCI</th>
                                                            <th scope="col">Accion</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="tab-pane" id="address">
                                    <div class="row">
                                        <h4 class="info-text"> Registre su comercio </h4>

                                        <div class="col-sm-10 col-sm-offset-1">

                                            <div class="col-sm-12">
                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="clave1">@Html.DisplayNameFor(m => m.Clave1):</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="clave1" name="clave1" type="text" class="form-control" asp-for="Clave1" disabled>
                                                    </div>
                                                </div>
                                                <hr />
                                            </div>

                                            <div class="col-sm-12">
                                                <div class="form-group row">
                                                    <label><strong>Datos del Comercio: </strong></label>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="codigocomercio">Id Comercio:</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="codigocomercio" name="codigocomercio" type="text" class="form-control" placeholder="Codigo del Comercio">
                                                    </div>
                                                    <div class="col-sm-7">
                                                        <small class="text-primary">Dato por el cual se realizara la busqueda en los bancos.</small>
                                                    </div>
                                                </div>
                                                <div id="ComercioExiste" style="display:none;" class="form-group control text-danger">
                                                    El Codigo del Comercio ya se encuentra registrado, por favor ingrese otro.
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="descripcionCom">Descripcion:</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="descripcionCom" type="text" class="form-control" placeholder="Descripcion del Comercio">
                                                        <small class="text-primary">Descripcion a mostrar en el banco.</small>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="correonotificacion">Correo de Notificacion:</label>
                                                    </div>
                                                    <div class="col-sm-10">
                                                        <input id="correonotificacion" name="correonotificacion" type="email" class="form-control" placeholder="Correo electronico">
                                                        <small class="text-primary">Correo electronico al cual se remitiran las notificaciones.</small>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label><strong>Cuenta Bancaria: </strong></label>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="idbancozipago1">Banco:</label>
                                                    </div>
                                                    <div class="col-sm-8">
                                                        <select id="idbancozipago1" name="idbancozipago1" class="form-control"></select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-sm-2">
                                                        <label for="cuentasxbanco">Cuenta Bancaria:</label>
                                                    </div>
                                                    <div class="col-sm-8">
                                                        <select id="cuentasxbanco" name="cuentasxbanco" class="form-control"></select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <a id="btnAnadirComercio" name="btnAnadirComercio" class="btn btn-success">
                                                            Añadir
                                                        </a>
                                                    </div>
                                                </div>

                                                <hr />
                                            </div>

                                            <div class="col-sm-12">
                                                <table id="tblComercios" class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="display:none;">IdCuenta</th>
                                                            <th scope="col" style="display:none;">IdUsuarioZiPago</th>
                                                            <th scope="col">Comercio</th>
                                                            <th scope="col">Descripcion</th>
                                                            <th scope="col">Correo notificacion</th>
                                                            <th scope="col">Cuenta Bancaria</th>
                                                            <th scope="col">Accion</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="wizard-footer height-wizard">
                                <div class="pull-right">
                                    <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Siguiente' />
                                    <input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' id="finish" name='finish' value='Registrar' />
                                </div>
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previo' />
                                </div>
                                <div class="clearfix"></div>
                            </div>

                        </form>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div><!-- end row -->
    </div> <!--  big container -->

    <div class="footer">
        <div class="container">

        </div>
    </div>

</div>

<script src="~/js/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>
<script src="~/js/gsdk-bootstrap-wizard.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/Afiliacion/registro.js"></script>