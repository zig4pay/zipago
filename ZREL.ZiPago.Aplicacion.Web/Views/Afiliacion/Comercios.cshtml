@using ZREL.ZiPago.Libreria
@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.ComerciosConsultaViewModel

@{
    Layout = "_Layout";
}

<section class="content-header">
    <h1>
        Comercios
        <small>Consulta</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Comercios</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Consulta de Comercios</h3>
                </div>
                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="box box-widget">
                                <div class="box-header">
                                    <h3 class="box-title">Filtros:</h3>
                                    <div class="box-tools">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <form class="form-horizontal" id="frmConsulta" asp-controller="Comercios" asp-action="ListarComercios" method="post">

                                        <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />

                                        <div class="form-group">
                                            <label for="codigocomercio" class="col-sm-1 control-label">ID Comercio:</label>
                                            <div class="col-sm-2">
                                                <input id="codigocomercio" name="codigocomercio" type="text" class="form-control" placeholder="Codigo del Comercio" maxlength="14">
                                            </div>

                                            <label for="descripcion" class="col-sm-2 control-label">Descripcion:</label>
                                            <div class="col-sm-2">
                                                <input id="descripcion" name="descripcion" type="text" class="form-control" placeholder="Descripcion del Comercio">
                                            </div>

                                            <label for="estado" class="col-sm-1 control-label">Estado:</label>
                                            <div class="col-sm-2">
                                                <select id="estado" name="estado" class="form-control">
                                                    <option value="0">Seleccione</option>
                                                    <option value="@Constantes.strValor_Activo">Activo</option>
                                                    <option value="@Constantes.strValor_NoActivo">Inactivo</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="idbancozipago" class="col-sm-1 control-label">Banco:</label>
                                            <div class="col-sm-2">
                                                <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                                            </div>

                                            <label for="numerocuenta" class="col-sm-2 control-label">Nro. de Cta. Bancaria:</label>
                                            <div class="col-sm-2">
                                                <input id="numerocuenta" name="numerocuenta" type="text" class="form-control" placeholder="Nro. de Cta. Bancaria" maxlength="20">
                                            </div>

                                            <div class="col-sm-3"></div>

                                            <div class="col-sm-2" style="text-align:right">
                                                <button type="button" id="btnCancelar" name="btnCancelar" class="btn btn-default">
                                                    <i class="fa fa-undo"></i>&nbsp;&nbsp;Cancelar&nbsp;&nbsp;
                                                </button>                                                
                                                <button type="button" id="btnConsultar" name="btnConsultar" class="btn btn-primary">
                                                    <i class="fa fa-search"></i>&nbsp;&nbsp;Consultar
                                                </button>
                                            </div>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>

                            <div class="box box-widget">
                                <div class="box-header">                                    
                                    <h3 class="box-title">Comercios registrados:</h3>
                                    <button type="button" class="btn btn-success pull-right">
                                        <i class="fa fa-plus"></i>&nbsp;&nbsp;Agregar
                                    </button>
                                </div>
                                <div class="box-body">
                                    <div class="form-group">
                                        <table id="tblcomercios" class="table table-striped table-hover table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Codigo</th>
                                                    <th>Descripcion</th>
                                                    <th>CorreoNotificacion</th>
                                                    <th>IdBancoZiPago</th>
                                                    <th>Banco</th>
                                                    <th>TipoCuentaBancaria</th>
                                                    <th>MonedaCuentaBancaria</th>
                                                    <th>CuentaBancaria</th>
                                                    <th>Estado</th>
                                                    <th>FechaCreacion</th>
                                                </tr>
                                            </thead> 
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-warning alert-dismissible">
                <h4><i class="icon fa fa-warning"></i>Deseas modificar o eliminar tus comercios registrados?</h4>
                <h4>
                    Por favor solicitalo a traves de nuestro <a href="https://zipago.zammad.com/" target="_blank">Servicio de Tickets ZiPago</a>.
                    Para ello crea un ticket de tipo "Modificacion/Supresion de datos", el cual sera atendido a la brevedad.
                </h4>
            </div>
        </div>
    </div>
</section>

