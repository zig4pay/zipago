@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.CuentaBancariaViewModel

@{
    Layout = "_Layout";
}

<section class="content-header">
    <h1>
        Comercios
        <small>Registro</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Registro</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Comercios registrados</h3>
                </div>
                <div class="box-body">
                    <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />
                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-10">
                            <h4>Actualmente tienes 1 comercio registrado.</h4>
                        </div>
                    </div>
                    <br />
                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-12">
                            <table id="tblcuentasbancarias" class="table table-striped table-bordered dt-responsive">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Descripcion</th>
                                        <th>Correo de Notificacion</th>
                                        <th>Banco</th>
                                        <th>Cuenta Bancaria</th>
                                        <th>Estado</th>
                                        <th>Fecha de Registro</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-10">
                            <h4>Necesitas registrar mas Comercios? Haz clic en el boton <strong>Agregar</strong></h4>
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-2 col-sm-offset-5">
                            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=".bs-example-modal-lg" data-backdrop="static" data-keyboard="false">
                                <span class="glyphicon glyphicon-plus"></span> Agregar
                            </button>
                        </div>
                    </div>

                    <div class="row" style="margin-top:30px">
                        <div class="col-sm-12">
                            <div class="alert alert-warning alert-dismissible">
                                <h4><i class="icon fa fa-warning"></i>Deseas modificar o eliminar tus comercios registrados?</h4>
                                Por favor solicitalo a traves de nuestro <a href="https://zipago.zammad.com/" target="_blank">Servicio de Tickets ZiPago</a>.
                                Para ello crea un ticket de tipo "Modificacion/Supresion de datos", el cual sera atendido a la brevedad.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="modalRegistro" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myExtraLargeModalLabel"><strong>Registrar Comercios</strong></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmAfiliacion" asp-controller="" asp-action="" method="post">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4>Selecciona e ingresa los siguientes datos, luego haz clic en el boton <strong>Añadir:</strong></h4>
                            </div>
                        </div>

                        <div class="row" style="margin-top:10px">
                            <div class="col-sm-10">
                                <label><strong>Datos del Comercio: </strong></label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="codigocomercio" class="col-sm-2">ID Comercio:</label>
                            <div class="col-sm-10">
                                <input id="codigocomercio" name="codigocomercio" type="text" class="form-control" placeholder="Codigo del Comercio">
                                <small class="text-primary">Dato por el cual se realizara la busqueda en los bancos.</small>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="descripcionCom" class="col-sm-2">Descripcion:</label>
                            <div class="col-sm-10">
                                <input id="descripcionCom" type="text" class="form-control" placeholder="Descripcion del Comercio">
                                <small class="text-primary">Descripcion a mostrar en el banco.</small>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="correonotificacion" class="col-sm-2">Correo de Notificacion:</label>
                            <div class="col-sm-10">
                                <input id="correonotificacion" name="correonotificacion" type="email" class="form-control" placeholder="Correo electronico">
                                <small class="text-primary">Correo electronico al cual se remitiran las notificaciones.</small>
                            </div>
                        </div>

                        <div class="row" style="margin-top:10px">
                            <div class="col-sm-10">
                                <label><strong>Cuenta Bancaria asociada: </strong></label>
                            </div>
                        </div>

                        <div class="form-group row" style="margin-top:10px">
                            <label for="idbancozipago" class="col-sm-2">Banco:</label>
                            <div class="col-sm-10">
                                <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="cuentasxbanco" class="col-sm-2">Cuenta Bancaria:</label>
                            <div class="col-sm-10">
                                <select id="cuentasxbanco" name="cuentasxbanco" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2 col-sm-offset-5">
                                <button type="button" id="btnAnadirComercio" class="btn btn-block btn-success">Añadir</button>
                            </div>
                        </div>
                        <hr />
                        <div class="row" style="margin-top:10px">
                            <div class="col-sm-10">
                                <h4>Comercios por registrar:</h4>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-sm-12">
                                <table id="tblComercios" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Nro.</th>
                                            <th scope="col">ID Comercio</th>
                                            <th scope="col">Descripcion</th>
                                            <th scope="col">Correo de Notificacion</th>
                                            <th scope="col">Cuenta Bancaria</th>                                            
                                            <th scope="col">Eliminar</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCancelar" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnRegistrar" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="~/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/bower_components/select2/dist/js/select2.full.js"></script>
<script src="~/bower_components/select2/dist/js/i18n/es.js"></script>
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/bower_components/fastclick/lib/fastclick.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/comercios.js"></script>