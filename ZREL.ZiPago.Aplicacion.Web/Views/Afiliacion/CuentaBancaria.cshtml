@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.CuentaBancariaViewModel

@{
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cuentas Bancarias
        <small>Registro</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Cuentas Bancarias</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">

                <div class="box-header with-border">
                    <h3 class="box-title">Cuentas Bancarias</h3>
                </div>
                <div class="box-body">
                    <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />
                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-10">
                            <p>Actualmente tienes 1 cuenta registrada.</p>
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-12">
                            <table id="tblcuentasbancarias" class="table table-striped table-bordered dt-responsive">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Banco</th>
                                        <th>Tipo de Cuenta</th>
                                        <th>Moneda</th>
                                        <th>Nro. de Cuenta</th>
                                        <th>CCI</th>
                                        <th>Fecha de Registro</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-2 col-sm-offset-5">
                            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=".bs-example-modal-lg">
                                <span class="glyphicon glyphicon-plus"></span> Agregar
                            </button>
                        </div>
                    </div>

                    <div class="row" style="margin-top:30px">
                        <div class="col-sm-12">
                            <div class="alert alert-warning alert-dismissible">
                                <h4><i class="icon fa fa-warning"></i>Deseas modificar o eliminar tus cuentas bancarias?</h4>
                                Por favor solicitalo a traves de nuestro <a href="https://zipago.zammad.com/" target="_blank">Servicio de Tickets ZiPago</a>.
                                Para ello crea un ticket de tipo "Modificacion/Supresion de datos", el cual sera atendido a la brevedad.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
        
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myExtraLargeModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmAfiliacion" asp-controller="" asp-action="" method="post">
                        


                        <div class="form-group row">
                            <label for="idbancozipago" class="col-sm-2">Banco:</label>
                            <div class="col-sm-4">
                                <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                            </div>
                            <div class="col-sm-2 col-sm-offset-4">
                                <a id="btnAnadirCta" class="btn btn-success">
                                    Añadir
                                </a>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="codigotipocuenta" class="col-sm-2">Tipo de Cuenta:</label>
                            <div class="col-sm-4">
                                <select id="codigotipocuenta" name="codigotipocuenta" asp-items="@(new SelectList(Model.TipoCuentas,"Valor", "Descr_Valor"))" class="form-control"></select>
                            </div>

                            <label for="codigomoneda" class="col-sm-2">Moneda:</label>
                            <div class="col-sm-4">
                                <select id="codigomoneda" name="codigomoneda" asp-items="@(new SelectList(Model.TipoMonedas,"Valor", "Descr_Valor"))" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="numerocuenta" class="col-sm-2">Numero de Cta. Bancaria:</label>
                            <div class="col-sm-4">
                                <input id="numerocuenta" name="numerocuenta" type="text" class="form-control" placeholder="Nro. de Cta. Bancaria">
                            </div>

                            <label for="cci" class="col-sm-2">Codigo de Cuenta Interbancario - CCI:</label>
                            <div class="col-sm-4">
                                <input id="cci" name="cci" type="text" class="form-control" placeholder="Codigo CCI">
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblCuentas" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col" style="display:none;">IdCuenta</th>
                                            <th scope="col" style="display:none;">CodigoBanco</th>
                                            <th scope="col">Banco</th>
                                            <th scope="col" style="display:none;">CodigoTipoCuenta</th>
                                            <th scope="col">Tipo de Cuenta</th>
                                            <th scope="col" style="display:none;">CodigoMoneda</th>
                                            <th scope="col">Moneda</th>
                                            <th scope="col">Numero de Cuenta</th>
                                            <th scope="col">Codigo Cta. Interbancario - CCI</th>
                                            <th scope="col">Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary">Registrar</button>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="~/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/bower_components/select2/dist/js/select2.full.js"></script>
<script src="~/bower_components/select2/dist/js/i18n/es.js"></script>
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/bower_components/fastclick/lib/fastclick.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/cuentabancaria.js"></script>