@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.CuentaBancariaViewModel

@{
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cuentas Bancarias
        <small>Registro</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Cuentas Bancarias</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">

                <div class="box-header with-border">
                    <h2 class="box-title">Cuentas Bancarias</h2>
                </div>

                <div class="box-body">

                    <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />

                    <p>Actualmente tienes X cuentas registradas.</p>

                    <div class="col-sm-10 col-sm-offset-1">
                        <table id="tblcuentasbancarias" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Banco</th>
                                    <th>Tipo de Cuenta</th>
                                    <th>Moneda</th>
                                    <th>Nro. de Cuenta</th>
                                    <th>CCI</th>
                                    <th>Fecha de Registro</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>

        </div>
    </div>


</section>

<script src="~/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/bower_components/select2/dist/js/select2.full.js"></script>
<script src="~/bower_components/select2/dist/js/i18n/es.js"></script>
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/bower_components/fastclick/lib/fastclick.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/cuentabancaria.js"></script>