@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.ComercioViewModel
@{
    Layout = "_Layout";
}

<section class="content-header">
    <h1>
        Comercios
        <small>Registro</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Comercios</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Registro de Comercios</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">                            
                            <div class="box box-widget">
                                <div class="box-header">
                                    <h3 class="box-title">Datos a registrar:</h3>
                                    <div class="box-tools">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <div class="row">
                                        <div class="col-md-12">

                                            <form class="form-horizontal" id="frmRegistro" method="post">

                                                <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />

                                                <div class="form-group">
                                                    <label class="col-sm-2">Del Comercio:</label>
                                                </div>

                                                <div class="form-group">
                                                    <label for="codigocomercio" class="col-sm-1">ID Comercio:</label>
                                                    <div class="col-sm-3">
                                                        <input id="codigocomercio" name="codigocomercio" type="text" class="form-control" placeholder="Codigo del Comercio" maxlength="14">
                                                    </div>
                                                    <div id="comercioexiste" style="display:none;" class="form-group control text-danger">
                                                        El Codigo del Comercio ya se encuentra registrado, por favor ingrese otro.
                                                    </div>
                                                    <label for="correonotificacion" class="col-sm-2 ">Correo de Notificacion:</label>
                                                    <div class="col-sm-3">
                                                        <input id="correonotificacion" name="correonotificacion" type="text" class="form-control" placeholder="Correo electronico">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="descripcioncomercio" class="col-sm-1">Descripcion:</label>
                                                    <div class="col-sm-8">
                                                        <input id="descripcioncomercio" name="descripcioncomercio" type="text" class="form-control" placeholder="Descripcion del Comercio">
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-sm-2">De la Cuenta Bancaria:</label>
                                                </div>

                                                <div class="form-group">
                                                    <label for="idbancozipago" class="col-sm-1">Banco:</label>
                                                    <div class="col-sm-3">
                                                        <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                                                    </div>
                                                    <label for="cuentasxbanco" class="col-sm-1">Cuenta Bancaria:</label>
                                                    <div class="col-sm-4">
                                                        <select id="cuentasxbanco" name="cuentasxbanco" class="form-control">
                                                            <option value="0">Seleccione</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-3" style="text-align:right">
                                                        <button type="button" id="btnCancelar" class="btn btn-default">
                                                            <i class="fa fa-undo"></i>&nbsp;Cancelar
                                                        </button>
                                                        <button type="button" id="btnAnadir" class="btn btn-primary">
                                                            <i class="fa fa-plus"></i>&nbsp;Anadir
                                                        </button>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="box box-widget">
                                <div class="box-header">
                                    <h3 class="box-title">Comercios a registrar:</h3>
                                    <button type="button" id="btnRegistrar" name="btnRegistrar" class="btn btn-success pull-right">
                                        <i class="fa fa-save"></i>&nbsp;Registrar
                                    </button>
                                </div>
                                <div class="box-body">

                                    <div class="row">
                                        <div class="col-md-12">

                                            <table id="tblComercios" class="table table-striped table-hover table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">Nro.</th>
                                                        <th scope="col">ID Comercio</th>
                                                        <th scope="col">Descripcion</th>
                                                        <th scope="col">Correo de Notificacion</th>
                                                        <th scope="col" style="display:none;">IdCuentaBancaria</th>
                                                        <th scope="col">Cuenta Bancaria</th>
                                                        <th scope="col">Eliminar</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button type="button" id="btnRegistrar" name="btnRegistrar" class="btn btn-success pull-right">
                                        <i class="fa fa-save"></i>&nbsp;Registrar
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="~/dist/bower_components/jquery/dist/jquery-3.3.1.min.js"></script>
<script src="~/dist/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/dist/bower_components/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/dist/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/dist/bower_components/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/dist/bower_components/datatables/js/dataTables.bootstrap.min.js"></script>
<script src="~/dist/bower_components/sweetalert/sweetalert.min.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/comercioregistro.js"></script>