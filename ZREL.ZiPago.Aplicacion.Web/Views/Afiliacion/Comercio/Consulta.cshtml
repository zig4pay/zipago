@using ZREL.ZiPago.Libreria
@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.ComercioViewModel

@{
    Layout = "_Layout";
    ViewData["Inicio"] = "";
    ViewData["Afiliacion"] = " active";
    ViewData["DatosPersonales"] = "";
    ViewData["CuentaBancaria"] = "";
    ViewData["Comercio"] = " class=\"active\" ";
}

<section class="content-header">
    <h1>
        Comercios
        <small>Consulta</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Comercios</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Consulta de Comercios</h3>
                </div>
                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="box box-widget collapsed-box">
                                <div class="box-header">
                                    <h3 class="box-title">Filtros de busqueda:</h3>
                                    <div class="box-tools">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">

                                    <form class="form-horizontal" id="frmConsulta" method="post">

                                        <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />

                                        <div class="form-group">
                                            <label for="codigocomercio" class="col-sm-1 control-label">ID Comercio:</label>
                                            <div class="col-sm-2">
                                                <input id="codigocomercio" name="codigocomercio" type="text" class="form-control" placeholder="Codigo del Comercio" maxlength="14">
                                            </div>

                                            <label for="descripcion" class="col-sm-2 control-label">Descripcion:</label>
                                            <div class="col-sm-2">
                                                <input id="descripcion" name="descripcion" type="text" class="form-control" placeholder="Descripcion del Comercio">
                                            </div>

                                            <label for="estado" class="col-sm-1 control-label">Estado:</label>
                                            <div class="col-sm-2">
                                                <select id="estado" name="estado" class="form-control">
                                                    <option value="0">Seleccione</option>
                                                    <option value="@Constantes.EstadoComercio.PendienteDeActivar">@Constantes.strEstadoComercio_Pendiente</option>
                                                    <option value="@Constantes.EstadoComercio.Activo">@Constantes.strEstadoComercio_Activo</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="idbancozipago" class="col-sm-1 control-label">Banco:</label>
                                            <div class="col-sm-2">
                                                <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdBancoZiPago", "NombreLargo"))" class="form-control"></select>
                                            </div>

                                            <label for="numerocuenta" class="col-sm-2 control-label">Nro. de Cta. Bancaria:</label>
                                            <div class="col-sm-2">
                                                <input id="numerocuenta" name="numerocuenta" type="text" class="form-control" placeholder="Nro. de Cta. Bancaria" maxlength="20">
                                            </div>

                                            <div class="col-sm-3"></div>

                                            <div class="col-sm-2" style="text-align:right">
                                                <button type="button" id="btnCancelar" name="btnCancelar" class="btn btn-default">
                                                    <i class="fa fa-undo"></i>&nbsp;Limpiar
                                                </button>
                                                <button type="button" id="btnConsultar" name="btnConsultar" class="btn btn-primary">
                                                    <i class="fa fa-search"></i>&nbsp;Consultar
                                                </button>
                                            </div>
                                        </div>
                                        
                                    </form>

                                </div>
                            </div>

                            <div class="box box-widget">
                                <div class="box-header">                                    
                                    <h3 class="box-title">Comercios registrados:</h3>
                                    <a asp-controller="Comercio" asp-action="Registrar" class="btn btn-success pull-right">
                                        <i class="fa fa-plus"></i>&nbsp;&nbsp;Agregar
                                    </a>
                                </div>
                                <div class="box-body">
                                    <div class="form-group">
                                        <table 
                                            id="tblcomercios"
                                            data-classes="table table-hover table-striped"
                                            data-locale="es-ES"
                                            data-toggle="table"
                                            data-search="false"
                                            data-show-refresh="false"
                                            data-pagination="true"                                                                                        
                                            data-show-pagination-switch="false"
                                            data-page-size="5"
                                            data-page-list="[5, 10, 15, 20, All]"
                                            data-url="ListarComercios"
                                            data-query-params="extraServerParams"
                                            data-pagination-pre-text="Anterior"
                                            data-pagination-next-text="Siguiente"
                                            >
                                            <thead>
                                                <tr>
                                                    <th data-field="id" data-visible="false">Id</th>
                                                    <th data-field="codigo">ID Comercio</th>
                                                    <th data-field="descripcion">Descripcion</th>
                                                    <th data-field="correoNotificacion">Correo de Notificacion</th>
                                                    <th data-field="idBancoZiPago" data-visible="false">IdBancoZiPago</th>
                                                    <th data-field="banco">Banco</th>
                                                    <th data-field="tipoCuentaBancaria">Tipo de Cuenta</th>
                                                    <th data-field="monedaCuentaBancaria">Moneda</th>
                                                    <th data-field="cuentaBancaria">Nro. de Cuenta/CCI</th>
                                                    <th data-field="estado">Estado</th>
                                                    <th data-field="fechaCreacion">Fecha Registro</th>
                                                </tr>
                                            </thead>                                             
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>    
</section>

<script src="~/bower_components/jquery/dist/jquery-3.3.1.min.js"></script>
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/bower_components/bootstrap-table-master/dist/bootstrap-table.min.js"></script>
<script src="~/bower_components/bootstrap-table-master/dist/locale/bootstrap-table-es-ES.min.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/comercioconsulta.js"></script>
<script src="~/dist/js/comun.js"></script>