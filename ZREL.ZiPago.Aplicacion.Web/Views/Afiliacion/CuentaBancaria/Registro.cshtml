@model ZREL.ZiPago.Aplicacion.Web.Models.Afiliacion.CuentaBancariaViewModel
@{
    Layout = "_Layout";
    ViewData["Inicio"] = "";
    ViewData["Afiliacion"] = " active";
    ViewData["DatosPersonales"] = "";
    ViewData["CuentaBancaria"] = " class=\"active\" ";
    ViewData["Comercio"] = "";
}

<section class="content-header">
    <h1>
        Cuentas Bancarias
        <small>Registro</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Afiliacion</a></li>
        <li class="active">Cuentas Bancarias</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Registro de Cuentas Bancarias</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-widget">
                                <div class="box-header">
                                    <h3 class="box-title">Selecciona e ingresa los siguientes datos, luego haz clic en el boton <strong>Registrar:</strong></h3>
                                    <br><br>
                                    <small class="text-red">(*) Datos obligatorios.</small>
                                </div>
                                <div class="box-body">

                                    <div class="row">
                                        <div class="col-md-12">
                                            <form class="form-horizontal" id="frmRegistro" method="post">
                                                <input id="idusuariozipago" name="idusuariozipago" type="hidden" asp-for="IdUsuarioZiPago" />
                                                <input id="bancosafiliados" name="bancosafiliados" type="hidden" value="@ViewData["BancosAfiliados"]"/>
                                                <div class="form-group">
                                                    <div class="col-sm-2">
                                                        <label for="idbancozipago">Banco:</label><label class="text-red">&nbsp;*</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select id="idbancozipago" name="idbancozipago" asp-items="@(new SelectList(Model.Bancos,"IdEntidad", "Descripcion"))" class="form-control"></select>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-sm-2">
                                                        <label for="codigotipocuenta">Tipo de Cuenta:</label><label class="text-red">&nbsp;*</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select id="codigotipocuenta" name="codigotipocuenta" asp-items="@(new SelectList(Model.TipoCuentas,"Valor", "Descr_Valor"))" class="form-control"></select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label for="codigomoneda">Moneda:</label><label class="text-red">&nbsp;*</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select id="codigomoneda" name="codigomoneda" asp-items="@(new SelectList(Model.TipoMonedas,"Valor", "Descr_Valor"))" class="form-control"></select>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-sm-2">
                                                        <label for="numerocuenta">Numero de Cta. Bancaria:</label><label class="text-red">&nbsp;*</label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="numerocuenta" name="numerocuenta" type="text" class="form-control" placeholder="Nro. de Cta. Bancaria" maxlength="20">
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <label for="cci">Codigo de Cta. Interbancario - CCI:</label><label id="labelCCI"  class="text-red"></label>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <input id="cci" name="cci" type="text" class="form-control" placeholder="Codigo CCI" maxlength="20">
                                                    </div>
                                                    <div class="col-sm-1" style="text-align:right">
                                                        <button type="button" id="btnLimpiar" class="btn btn-default">
                                                            <i class="fa fa-eraser"></i>&nbsp;Limpiar
                                                        </button>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <button type="button" id="btnRegistrar" class="btn btn-primary">
                                                            <i class="fa fa-save"></i>&nbsp;Registrar
                                                        </button>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div id="cuentabancariaexiste" style="display:none;" class="text-red">
                                                        <label>La Cuenta Bancaria ya se encuentra registrada.</label>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="~/bower_components/jquery/dist/jquery-3.3.1.min.js"></script>
<script src="~/bower_components/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/bower_components/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/bower_components/sweetalert/sweetalert.min.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>
<script src="~/dist/js/Afiliacion/cuentabancariaregistro.js"></script>
<script src="~/dist/js/comun.js"></script>