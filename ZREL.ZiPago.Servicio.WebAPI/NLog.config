<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="true" internalLogFile="d:\temp\nlog-internal.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets async="true">
    <target
        xsi:type="File"
        name="ZiPago_Log"
        fileName="D:/06.Trabajo/05.Zigleet/log/${shortdate}_ZiPagoWebAPI.log"
        encoding="utf-8"
        layout="${longdate} [${pad:padCharacter=0:padding=4:fixedLength=true:${threadid}}] | ${logger} | ${message} ${exception:format=tostring}"
        archiveEvery="Day"
        archiveFileName="D:/06.Trabajo/05.Zigleet/log/${shortdate}_ZiPagoWebAPI_{#}.log"
        archiveNumbering="Sequence"
        archiveDateFormat="yyyy-MM-dd"
        archiveAboveSize="52428800"
        maxArchiveFiles="200"
    />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" maxlevel="Error" writeTo="ZiPago_Log" />
  </rules>
</nlog>